<%- include('_header')%>
    <%- include('_sidebar')%>
        <div class="main">
            <h1>Add Student </h1>
            <form class="form-container" action="/student/createStudent" method="POST">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" placeholder="name" />
                </div>
                <div class="form-group">
                    <label>Batch</label>
                    <select class="form-control" name="batchName">
                        <option>Choose Batch</option>
                        <% for (batch of batches) { %>
                            <option value="<%= batch.name %>">
                                <%= batch.name %>
                            </option>

                            <%}%>
                    </select>
                </div>
                <div class="form-group">
                    <label>status</label>
                    <select class="form-control" name="status">
                        <option>Choose Status</option>
                        <option value="placed">Placed</option>
                        <option value="notPlaced">Not Placed</option>

                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-submit mt-23" value="Submit" />
                </div>
            </form>
        </div>