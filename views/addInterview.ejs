<%- include('_header')%>
    <%- include('_sidebar')%>


        <div class="main">
            <h1>Add Interview</h1>
            <form class="form-container" action="/interview/createInterview" method="POST">
                <div class="form-group">
                    <label>Subject</label>
                    <input type="text" class="form-control" name="subject" />
                </div>
                <div class="form-group">
                    <label>Date</label>
                    <input type="date" class="form-control" name="date" />
                </div>
                <div class="form-group">
                    <label>Company Name</label>
                    <input type="text" class="form-control" name="companyName" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-submit mt-23" value="Submit" />
                </div>
            </form>
        </div>